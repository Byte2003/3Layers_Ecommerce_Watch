
@model MVC_Watch_Business.DTO.RegisterDTO.RegisterRequestDTO
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-8">
            <form id="registerForm" asp-action="Register" method="post">
                <div class="row">
                    <h2>Create a new account.</h2>
                    <div class="col-md-6">
                        <label asp-for="@Model.FirstName" class="form-label"></label>
                        <input asp-for="@Model.FirstName" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label asp-for="@Model.LastName" class="form-label"></label>
                        <input asp-for="@Model.LastName" class="form-control">
                    </div>
                    <div class="col-md-12">
                        <label asp-for="@Model.Email" class="form-label"></label>
                        <input asp-for="@Model.Email" type="email" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label asp-for="@Model.UserName" class="form-label"></label>
                        <input asp-for="@Model.UserName" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label asp-for="@Model.Password" class="form-label"></label>
                        <input asp-for="@Model.Password" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label asp-for="@Model.ConfirmPassword" class="form-label"></label>
                        <input asp-for="@Model.ConfirmPassword" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label asp-for="@Model.City" class="form-label"></label>
                        <input asp-for="@Model.City" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label asp-for="@Model.Address" class="form-label"></label>
                        <input asp-for="@Model.Address" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label asp-for="@Model.PhoneNumber" class="form-label"></label>
                        <input asp-for="@Model.PhoneNumber" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label asp-for="@Model.PostalCode" class="form-label"></label>
                        <input asp-for="@Model.PostalCode" class="form-control">
                    </div>
                    <div class="col-12 mt-3">
                        <button type="submit" class="btn btn-primary">Sign in</button>
                    </div>
                </div>
            </form>
        </div>
