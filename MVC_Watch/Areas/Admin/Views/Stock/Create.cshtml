@model MVC_Watch_UI.ViewModels.AddStockViewModel
<div class="container">
    <h3 class="text-primary">Add Stock</h3>
    <hr />
    <form method="post" asp-action="Create" class="mt-3">
        <div class="row">
            <div class="col-md-4">
                <label asp-for="@Model.Stock.ProductID"></label>
                <select asp-for="@Model.Stock.ProductID" asp-items="@Model.ProductList" class="form-select">
                    <option disabled selected>--Select Product--</option>
                </select>
                <span asp-validation-for="@Model.Stock.ProductID" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="@Model.Stock.Quantity">Quantity</label>
                <input type="number" asp-for="@Model.Stock.Quantity" class="form-control">
                <span asp-validation-for="@Model.Stock.Quantity" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary my-3">OK</button>
        <a asp-controller="Stock" asp-action="Index" class="btn btn-secondary my-3">
            Back
        </a>
    </form>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />

    }
}