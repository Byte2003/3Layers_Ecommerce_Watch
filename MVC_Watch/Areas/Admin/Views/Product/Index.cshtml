@model IEnumerable<MVC_Watch_Business.DTO.ProductDTO.ProductDTO>
<div class="container">
    <h3 class="text-primary">Manage Product</h3>
    <hr />
    <div class="d-flex w-100 my-5 justify-content-end">
        <a class="btn btn-success mx-2" asp-controller="Product" asp-action="Create">
            <i class="bi bi-plus-circle-dotted"></i> New Product
        </a>
    </div>

    <table id="productTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Brand</th>
                <th>Price</th>
                <th>Description</th>
                <th>Image</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Category.CategoryName</td>
                    <td>@product.Brand.BrandName</td>
                    <td>@product.Price</td>
                    <td>@Html.Raw(product.Description)</td>
                    <td style="width:10%">
                        <img src="@product.ImageUrl" alt="Alternate Text" class="img-fluid" />
                    </td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a asp-area="Admin" asp-controller="Product" asp-action="Update" asp-route-product_id="@product.ProductID" class="btn btn-primary mx-2">Update</a>
                            <a class="btn btn-danger mx-2" asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-product_id="@product.ProductID">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="d-flex w-100 my-5 justify-content-start">
        <a class="btn btn-outline-success mx-2 error-actions" asp-area="Customer" asp-controller="Home" asp-action="Index">
            <i class="bi bi-plus-circle-dotted"></i> Back to Home
        </a>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#productTable').DataTable();
        });
    </script>
}