@model MVC_Watch_UI.ViewModels.ProductViewModel
<div class="container">
    <h3 class="text-primary">New Product</h3>
    <hr />
    <form class="row g-3" asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="col-md-6">
            <label asp-for="@Model.Product.Name" class="form-label">Name</label>
            <input type="text" asp-for="@Model.Product.Name" class="form-control" id="inputEmail4">
            <span asp-validation-for="@Model.Product.Name" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="@Model.Product.Price" class="form-label">Price</label>
            <input type="text" asp-for="@Model.Product.Price" class="form-control" id="inputPassword4">
            <span asp-validation-for="@Model.Product.Price" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label asp-for="@Model.Product.Description" class="form-label">Description</label>
            <textarea asp-for="@Model.Product.Description" rows="1" class="form-control"> </textarea>
        </div>
        <div class="col-12">
            <label asp-for="@Model.Product.ImageUrl">Image</label>
            <input type="file" id="uploadBox" name="file" asp-for="@Model.Product.ImageUrl" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="@Model.Product.CategoryID"></label>
            <select asp-for="@Model.Product.CategoryID" asp-items="@Model.CategoryList" class="form-select">
                <option disabled selected>--Select Category--</option>
            </select>
            <span asp-validation-for="@Model.Product.CategoryID" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="@Model.Product.BrandID"></label>
            <select asp-for="@Model.Product.BrandID" asp-items="@Model.BrandList" class="form-select">
                <option disabled selected>--Select Brand--</option>
            </select>
            <span asp-validation-for="@Model.Product.BrandID" class="text-danger"></span>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-success">Create</button>
            <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-outline-primary">Back to Product list</a>
        </div>
    </form>
</div>
