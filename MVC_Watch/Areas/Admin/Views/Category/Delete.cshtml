@model MVC_Watch_Business.DTO.CategoryDTO.CategoryDTO
<div class="container">
    <h3 class="text-primary">Update Category</h3>
    <hr />
    <form method="post" asp-action="Delete">
        <input asp-for="@Model.CategoryID" hidden>
        <div class="row">
            <div class="my-3 col-12">
                <label asp-for="@Model.CategoryName" class="form-label">Category Name</label>
                <input type="text" asp-for="@Model.CategoryName" class="form-control" disabled>
            </div>
            <div class="col-12 mt-5">
                <label asp-for="@Model.CategoryDescription"> Description</label>
                <textarea asp-for="@Model.CategoryDescription" rows="3" class="form-control"> </textarea>
                <span asp-validation-for="@Model.CategoryDescription" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:200px">
            Back to Category list
        </a>
    </form>
</div>
