@model IEnumerable<MVC_Watch_Business.DTO.CategoryDTO.CategoryDTO>
<div class="container">
    <h3 class="text-primary">Manage Category</h3>
    <hr />
    <div class="d-flex w-100 my-5 justify-content-end">
        <a class="btn btn-success mx-2" asp-controller="Category" asp-action="Create">
            <i class="bi bi-plus-circle-dotted"></i> Add new category
        </a>
    </div>

    <table id="categoryTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cate in Model)
            {
                <tr>
                    <td>@cate.CategoryID</td>
                    <td>@cate.CategoryName</td>
                    <td>@Html.Raw(cate.CategoryDescription)</td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-cate_id="@cate.CategoryID" class="btn btn-primary mx-2">Update</a>
                            <a class="btn btn-danger mx-2" asp-area="Admin" asp-action="Delete" asp-route-cate_id="@cate.CategoryID">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="d-flex w-100 my-5 justify-content-start">
        <a class="btn btn-outline-success mx-2 error-actions" asp-area="Customer" asp-controller="Home" asp-action="Index">
            <i class="bi bi-plus-circle-dotted"></i> Back to Home
        </a>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#categoryTable').DataTable();
        });
    </script>
}
