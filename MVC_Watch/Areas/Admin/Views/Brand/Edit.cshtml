@model MVC_Watch_Business.DTO.BrandDTO.UpdateBrandDTO
<div class="container">
    <h3 class="text-primary">Update Brand</h3>
    <hr />
    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="row">
            <input asp-for="@Model.BrandID" hidden>
            <div class="my-3">
                <label asp-for="@Model.BrandName" class="form-label">Brand Name</label>
                <input type="text" asp-for="@Model.BrandName" class="form-control">
                <span asp-validation-for="@Model.BrandName" class="text-danger"></span>

            </div>
            <div class="col-12 mt-5">
                <label asp-for="@Model.BrandDescription"> Description</label>
                <textarea asp-for="@Model.BrandDescription" rows="3" class="form-control"> </textarea>
                <span asp-validation-for="@Model.BrandDescription" class="text-danger"></span>
            </div>
            <div class="col-12 mt-3">
                <label asp-for="@Model.BrandImageUrl">Image</label>
                <input type="file" name="file" id="uploadBox" asp-for="@Model.BrandImageUrl" class="form-control" />
            </div>
        </div>
        <button type="submit" class="btn btn-primary my-3">Update</button>
        <a asp-area="Admin" asp-controller="Brand" asp-action="Index" class="btn btn-secondary my-3" style="width:200px">
            Back to Brand list
        </a>
    </form>
</div>
